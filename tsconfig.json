{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",

    /* Modules */
    "module": "commonjs",

    /* Emit */
    "sourceMap": true,
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
